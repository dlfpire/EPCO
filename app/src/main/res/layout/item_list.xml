<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/play_iv"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:src="@drawable/play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/_album_iv"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:src="@drawable/album"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play_iv"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="사용자이름"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/_album_iv"
        android:layout_marginTop="17dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="설명"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@+id/name_tv"
        app:layout_constraintStart_toEndOf="@+id/_album_iv"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/chat_iv"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/chat"
        app:layout_constraintEnd_toStartOf="@+id/heart_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/heart_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginEnd="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>